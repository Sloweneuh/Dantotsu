<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_round_arrow_back_ios_new_24"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Firebase Test Console"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:textColor="?attr/colorOnSurface" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="?attr/colorSurfaceVariant"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:text="Loading status..."
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FCM Token"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/colorOnSurface" />

            <Button
                android:id="@+id/btnGetToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get FCM Token"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Topics"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/colorOnSurface" />

            <Button
                android:id="@+id/btnSubscribeTopics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subscribe to Topics"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manual Triggers"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/colorOnSurface" />

            <Button
                android:id="@+id/btnTriggerUnread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trigger Unread Chapters Check"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnTriggerSubscriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trigger Subscription Check"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnForceSchedulerTick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Force Scheduler Tick (Test 5min)"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Utilities"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/colorOnSurface" />

            <Button
                android:id="@+id/btnWriteTestLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write Test Log (Persisted)"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnViewLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Full Background Logs"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnRefreshStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Refresh Status"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

