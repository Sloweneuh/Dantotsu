<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/myanimelist"
        app:srcCompat="@drawable/ic_myanimelist"
        app:tint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/mal_not_logged_in_title"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="?attr/colorOnBackground" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:alpha="0.7"
        android:text="@string/mal_not_logged_in_desc"
        android:textAlignment="center"
        android:textSize="14sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/connectButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingHorizontal="32dp"
        android:text="@string/connect_to_mal"
        android:textSize="16sp"
        app:icon="@drawable/ic_myanimelist"
        app:iconGravity="textStart"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quickSearchButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingHorizontal="32dp"
        android:text="@string/quick_search"
        android:textSize="14sp"
        app:icon="@drawable/ic_round_search_24"
        app:iconGravity="textStart"
        app:cornerRadius="8dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/openButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingHorizontal="32dp"
        android:text="@string/open_on_mal"
        android:textSize="14sp"
        app:icon="@drawable/ic_open_24"
        app:iconGravity="textStart"
        app:cornerRadius="8dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="2dp" />

</LinearLayout>

